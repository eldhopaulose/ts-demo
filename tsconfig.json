{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "noPropertyAccessFromIndexSignature": true
  },
  "typedocOptions": {
    "entryPoints": ["src/**/*", "src/*.d.ts"],
    "out": "docs"
  },
  "include": ["src/**/*", "src/*.d.ts"],
  "exclude": ["node_modules"]
}
